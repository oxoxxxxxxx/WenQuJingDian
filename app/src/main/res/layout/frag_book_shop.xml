<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/frag_book_shop_title"
        layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/frag_book_shop_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/frag_book_shop_tab"
            android:layout_width="0dp"
            android:layout_height="120px"
            android:layout_weight="1"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/themeColor"
            app:tabIndicatorHeight="5px"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/textColor_333"
            app:tabTextColor="@color/textColor_333">


        </android.support.design.widget.TabLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/frag_book_shop_lift_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:src="@drawable/arrow"/>


    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v4.view.ViewPager
        android:id="@+id/frag_book_shop_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>


</android.support.v7.widget.LinearLayoutCompat>