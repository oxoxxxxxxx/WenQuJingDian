<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#eeeeee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/act_home_book_lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="12px"
                android:paddingBottom="8px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/act_home_book_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shu"/>

                <TextView
                    android:id="@+id/act_home_book_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书架"
                    android:layout_marginTop="10px"
                    android:textColor="@color/themeColor"
                    android:textSize="28px"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/act_home_shop_lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingTop="12px"
                android:paddingBottom="8px"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/act_home_shop_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/book1"/>

                <TextView
                    android:id="@+id/act_home_shop_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书城"
                    android:layout_marginTop="10px"
                    android:textColor="@color/themeColor_1"
                    android:textSize="28px"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/act_home_me_lin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="12px"
                android:paddingBottom="8px"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/act_home_me_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/our1"/>

                <TextView
                    android:id="@+id/act_home_me_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:layout_marginTop="10px"
                    android:textColor="@color/themeColor_1"
                    android:textSize="28px"
                    />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>