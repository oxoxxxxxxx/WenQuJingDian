<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/home_framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#eeeeee"/>


        <RadioGroup
            android:id="@+id/home_radio_group"
            android:layout_width="match_parent"
            android:layout_height="121px"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/home_radio_home"
                style="@style/radiobutton_style"
                android:checked="true"
                android:drawablePadding="3dp"

                android:text="书架" />
            <!--android:drawableTop="@drawable/radiobutton_bg_home"-->

            <RadioButton
                android:id="@+id/home_radio_book_shop"
                android:drawablePadding="3dp"
                style="@style/radiobutton_style"
                android:checked="true"

                android:text="书城" />

            <!--android:drawableTop="@drawable/radiobutton_bg_shop"-->

            <RadioButton
                android:id="@+id/home_radio_me"
                style="@style/radiobutton_style"
                android:drawablePadding="3dp"
                android:checked="true"
                android:text="我的" />

            <!--android:drawableTop="@drawable/radiobutton_bg_me"-->
        </RadioGroup>

    </LinearLayout>


</LinearLayout>