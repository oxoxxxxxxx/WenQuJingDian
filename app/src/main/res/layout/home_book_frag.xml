<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/home_fragment_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wenqujingdian.ui.ScrollInterceptScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/segmenting_line"/>



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/hoe_books"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="30px"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="30px"
                    android:layout_height="match_parent"
                    />


                <TextView
                    android:id="@+id/home_down_more"
                    android:layout_width="match_parent"
                    android:layout_height="87px"
                    android:text="点击加载更多"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:textSize="30px"
                    android:layout_marginBottom="30px"
                    android:gravity="center"
                    android:background="@drawable/down_more"
                    />




            </LinearLayout>
        </com.wenqujingdian.ui.ScrollInterceptScrollView>



    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>