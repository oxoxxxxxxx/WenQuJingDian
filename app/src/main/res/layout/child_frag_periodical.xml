<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/periodical_refresh"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wenqujingdian.ui.ScrollInterceptScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/segmenting_line"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78px"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/periodical_edit_find"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_weight="2.5"
                        android:background="@drawable/shape_bian_999"
                        android:hint="  期刊名称"
                        android:textColor="@color/textColor_333"
                        android:textColorHint="@color/textColor_999"
                        android:textSize="25px"/>


                    <TextView
                        android:id="@+id/periodical_sou_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20px"
                        android:layout_weight="1"
                        android:background="@color/themeColor"
                        android:gravity="center"
                        android:text="搜索"
                        android:textColor="@android:color/white"
                        android:textSize="25px"
                        android:textStyle="bold"/>

                </LinearLayout>


                <include layout="@layout/segmenting_line"/>



            </LinearLayout>



        </com.wenqujingdian.ui.ScrollInterceptScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="30dp"
        android:text="期刊"/>


</com.zhy.autolayout.AutoLinearLayout>